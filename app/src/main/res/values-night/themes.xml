<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- ✅ 主应用主题（深色模式，无 ActionBar） -->
    <style name="Theme.MoodDiary" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 背景与文字颜色（深色背景 + 浅色文字） -->
        <item name="android:colorBackground">#121212</item>
        <item name="android:textColor">#FFFFFF</item>

        <!-- 主色调 -->
        <item name="colorPrimary">#BB86FC</item>
        <item name="colorPrimaryVariant">#3700B3</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- 状态栏与导航栏 -->
        <item name="android:statusBarColor" tools:targetApi="l">#BB86FC</item>
        <item name="android:navigationBarColor" tools:targetApi="l">#121212</item>
    </style>

    <!-- ✅ 启动页专用主题（无 ActionBar） -->
    <style name="Theme.MoodDiary.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- ✅ 外观主题切换按钮样式 -->
    <style name="ThemeToggleButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/selector_theme_button_bg</item>
        <item name="android:textColor">@color/selector_theme_button_text</item>
    </style>

</resources>
